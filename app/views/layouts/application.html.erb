<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<%if user_signed_in? %>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to   image_tag ("loginlogo"), size:7*8 %></h5>
      <nav class="my-2 my-md-0 mr-md-3 sticky-top">
        <%= link_to 'Show Listing',listings_path,class:'p-2 text-dark' %>
        <%= link_to 'Create Listing',new_listing_path,class:'p-2 text-dark' %>
        
       <!--   <%= text_field_tag :search, params[:search],class:'search p-2 text-dark' %>
        <%= submit_tag "Search", :name => nil, class:'p-2 text-dark btn btn-warning' %> -->

      <!--   <a class="p-2 text-dark" href="#">Support</a>
        <a class="p-2 text-dark" href="#">Pricing</a> -->
         <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:'btn btn-outline-warning' %>
      </nav>
      
      <% else %> 
      <% end %>
</div>
  <%= yield %>
  </body>
</html>