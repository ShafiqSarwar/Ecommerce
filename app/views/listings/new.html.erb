<h1>New Listing</h1>
<%= form_with(model: @listing, local: true) do |form| %>

<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= form.text_field :name, autofocus: true, class:'radiusfull',placeholder: 'Enter Your Furniture Name' %>
    </div>
</div>
<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= form.text_field :description, autofocus: true, class:'radiusfull',placeholder: 'Description' %>
    </div>
</div>
<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= form.text_field :adress, autofocus: true, class:'radiusfull',placeholder: 'Phone Number' %>
    </div>
</div>
<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= form.file_field :cover %>
    </div>
</div>
<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= form.submit class:'btn btn-outline-primary' %>
    </div>
</div>
<div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= link_to 'Back', listings_path %>
    </div>
</div>

<% end %>

